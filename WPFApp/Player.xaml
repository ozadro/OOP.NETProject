<UserControl x:Class="WPFApp.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp"
             xmlns:lang="clr-namespace:WPFApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400" Loaded="Player_Loaded" Margin="0,0,10,10" MouseDoubleClick="UserControl_MouseDoubleClick">

    <UserControl.Background>
        <ImageBrush ImageSource="Resources/jersey.png"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="2">
            <Label x:Name="lbName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="4" Foreground="#FF00FFE2"/>
        </Viewbox>
        <Viewbox Grid.Row="3">
            <Label x:Name="lbNumber" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="3" Foreground="#FF00FFE2"/>
        </Viewbox>
        
    </Grid>
</UserControl>
