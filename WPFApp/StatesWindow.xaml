<Window x:Class="WPFApp.StatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:WPFApp.Properties"
       
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="StatesWindow" Height="250" Width="500" Loaded="StatesWindow_Loaded" SizeChanged="Window_SizeChanged" ResizeMode="NoResize" Background="Tomato">
  
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox>
            <ComboBox Grid.Row="0"  x:Name="ddlStates" Width="200" Height="20" Margin="50,40,60,10" Background="Tomato"/>
        </Viewbox>            

        <Viewbox Grid.Row="1" >
            <Button x:Name="btnChoose" Grid.Row="1" Content="{x:Static lang:Resources.choose}"  HorizontalAlignment="Center" Click="btnChoose_Click" Height="20" Width="90" Margin="30"/>
        </Viewbox>
    </Grid>
</Window>
